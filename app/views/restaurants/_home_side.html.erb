
    <% @restaurants.each do |restaurant| %>
      
        <p><%= link_to restaurant.name, restaurant %> </br>
        <%= restaurant.address %></br>

    
   
      <% if user_signed_in? %>
        <%= link_to 'Edit', edit_restaurant_path(restaurant) %> 
      <% end %>
   
      <% if admin_signed_in? %>
         | <%= link_to 'Delete', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      <% end %>

    <% end %>
