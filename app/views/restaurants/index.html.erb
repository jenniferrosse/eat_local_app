<div class="container">
  <h1>Listing restaurants</h1>

 <div class="table-responsive"> 
  <table class="table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>Url</th>
        <th>Menu</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @restaurants.each do |restaurant| %>
        <tr>
          <td><%= link_to restaurant.name, restaurant.url %></td>
          <td><%= restaurant.address %></td>
          <td><%= restaurant.latitude %></td>
          <td><%= restaurant.longitude %></td>
          <td><%= restaurant.url %></td>
          <td><%= restaurant.menu %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Show', restaurant %></td>
          <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
          <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Restaurant', new_restaurant_path %>
<% end %>
</div>
