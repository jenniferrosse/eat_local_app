<div class="container">

<%= form_tag restaurants_path, :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search Near", :name => nil %>
  </p>
<% end %>

  <h1>Listing restaurants</h1>

 <div class="table-responsive"> 
  <table class="table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
      <% if user_signed_in? %>
        <th>Latitude</th>
        <th>Longitude</th>
      <% end %>
        <th>Url</th>
        <th>Menu</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @restaurants.each do |restaurant| %>
        <tr>
          <td><%= link_to restaurant.name, restaurant %></td>
          <td><%= restaurant.address %></td>
        <% if user_signed_in? %>
          <td><%= restaurant.latitude %></td>
          <td><%= restaurant.longitude %></td>
        <% end %>
          <td><%= link_to restaurant.url, restaurant.url %></td>
          <td><%= restaurant.menu %></td>
        <% if user_signed_in? %>
          
          <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
          <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Restaurant', new_restaurant_path %>
<% end %>
</div>
